{
  "name": "sim-frontend",
  "version": "1.0.0",
  "description": "Maven-based frontend web application for School Information Management System",
  "main": "js/main.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "dev:serve": "node scripts/dev-server.js",
    "build": "webpack --mode development",
    "build:prod": "node scripts/build-prod.js",
    "build:analyze": "webpack --mode production --env analyze",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "lint": "eslint js/**/*.js",
    "lint:fix": "node scripts/lint-fix.js",
    "lint:ci": "eslint js/**/*.js --format junit --output-file reports/eslint-results.xml",
    "format": "prettier --write js/**/*.js css/**/*.css *.html *.json",
    "format:check": "prettier --check js/**/*.js css/**/*.css *.html *.json",
    "serve": "node scripts/dev-server.js",
    "clean": "rimraf dist node_modules/.cache reports coverage",
    "validate": "npm run lint && npm run format:check && npm run test:ci",
    "validate:build": "node scripts/validate-build.js",
    "prebuild": "npm run clean",
    "prebuild:prod": "npm run clean && npm run validate",
    "postbuild": "npm run validate:build",
    "postbuild:prod": "npm run validate:build",
    "start": "npm run dev:serve",
    "audit:fix": "npm audit fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "config:validate": "node scripts/validate-config.js"
  },
  "keywords": [
    "school",
    "management",
    "education",
    "maven",
    "frontend",
    "javascript"
  ],
  "author": "SIM Development Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bootstrap": "^5.3.2",
    "chart.js": "^4.4.0",
    "@fortawesome/fontawesome-free": "^6.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/plugin-transform-runtime": "^7.23.6",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "mini-css-extract-plugin": "^2.7.6",
    "html-webpack-plugin": "^5.6.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "copy-webpack-plugin": "^11.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.3.0",
    "autoprefixer": "^10.4.16",
    "webpack-bundle-analyzer": "^4.10.1",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/dom": "^9.3.4",
    "rimraf": "^5.0.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom"
    ],
    "testMatch": [
      "**/test/**/*.test.js",
      "**/js/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/**/*.test.js",
      "!js/vendor/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}